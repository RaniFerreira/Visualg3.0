
Algoritmo "dobroDoNumero"

/*Crie um algoritmo que receba um número 
digitado pelo usuário e mostre o valor de seu 
dobro*/

Var

   numero,dobro : real


Inicio

      escreva("Digite um número: ")
      leia(numero)
      
      dobro <- numero * 2
      
      escreva("O dobro do número digitado é: ", dobro)


Fimalgoritmo